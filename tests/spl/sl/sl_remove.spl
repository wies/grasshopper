include "../include/sllist.spl";

procedure remove(lst: Node) 
  returns (res: Node)
  requires lseg(lst, null)
  ensures lseg(res, null)
{
  if (lst == null)
    return null;
  else {
    var nondet: Bool, curr: Node;
    curr := lst;
    while (nondet && curr.next != null) 
      invariant curr != null
      invariant lseg(lst, curr)
      invariant lseg(curr, null)
    {
      havoc nondet;
      curr := curr.next;
    }
    
    var tmp: Node;
    tmp := curr.next;
    if (tmp != null) {
      curr.next := tmp.next;
      free(tmp);
    }
    return lst;
  }
}
