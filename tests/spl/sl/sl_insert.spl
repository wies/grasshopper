include "../include/sllist.spl";

procedure insert(lst: Node, elt: Node) returns (res: Node)
  requires lseg(lst, null) &*& elt.next |-> null
  ensures lseg(res, null)
{
  if (lst == null)
    return elt;
  else {
    var nondet: Bool;
    var curr: Node;
    curr := lst;
    while (nondet && curr.next != null) 
      invariant acc(curr) -** lseg(lst, null)
    {
      havoc nondet;
      curr := curr.next;
    }
    elt.next := curr.next;
    curr.next := elt;
    return lst;
  }
}
